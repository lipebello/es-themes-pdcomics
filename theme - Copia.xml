	</text>

<text name="md_lbl_publisher">
	<pos>0.745 2.30</pos>
</text>
	
	<text name="md_publisher">
	<pos>0.72 0.936</pos>
	</text>

<text name="md_lbl_releasedate">
	<pos>0.74 2.36</pos>
</text>

	<datetime name="md_releasedate">
	<pos>0.9 0.936</pos>
	</datetime>

<text name="md_lbl_playcount">
	<pos>0.53 0.137</pos>
</text>

	<text name="md_playcount">
	<fontPath>./_art/player.ttf</fontPath>
	<size>0.18 0.02</size>
	<pos>0.65 0.129</pos>
	<fontSize>0.0470</fontSize>
	</text>
	
<text name="md_lbl_lastplayed">
	<pos>0.53 .166</pos>
</text>

<datetime name="md_lastplayed">
	<pos>0.633 .165</pos>
</datetime>

</view>

<view name="detailed">
<image name="choose" extra="true">
	<path>./_art/choose.png</path>
	<origin>.5 .5</origin>
	<pos>0.8582 0.1185</pos>
	<maxSize>0.22 0.15</maxSize>
</image>
</view>

